            <div class="manifs-data">
                <div class="card-infos">
                    <p>{{ el.manifTitre }}</p>
                    <p>LA DATE</p>
                    <p>{{ el.manifHeure }}</p>
                </div>
                <div class="card-infos2">
                    <p>{{ el.getLieuId.getLieuNom }}</p>
                    <p>{{ el.manifPrix }} â‚¬</p>
                </div>
                <div class="card-infos-bt">
                    <a href="#">CONSULTER L'EVENEMENT</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </section>
{% endblock %}
