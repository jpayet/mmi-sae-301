        <div class="searchbar">
            <input type="search" placeholder="Rechercher" id="searchbar" />
            <button id="loupe" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
        </div>
    </form>
{% endblock %}

{% block affichagPrincipale %}
