{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block javascripts %}<script src="{{ asset('js/scriptpanier.js')}}"></script>{% endblock %}

{% block h1 %}RECAPITULATIF DE VOTRE PANIER{% endblock %}

{% block affichagPrincipale %}
    <section class="panier">
        <table>
            <thead>
            <tr>
                <th>Produit</th>
                <th>Nombre de place(s)</th>
                <th>Prix à l'unité</th>
                <th>Prix total</th>
            </tr>
            </thead>
            <tbody id="zone">

            </tbody>
            <tfoot><tr><td id="bas" colspan="3"></td><td><span id="total"></span></td></tr></tfoot>
        </table>
    </section>
{% endblock %}

{% block ssSection %}
