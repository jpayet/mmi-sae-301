        <p class="Total">PRIX TOTAL</p>
        <hr>
        <div class="validation">
            <form action="finalisation.php" method="post">
                <input type="hidden" name="liste" id="liste">
                <a href="billeterie">CONTINUER MES ACHATS</a>
                <button type="submit">FINALISER MES ACHATS</button>
            </form>
        </div>

    </section>
{% endblock %}

